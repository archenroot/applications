<project>
	<property name="libraries" value="../../../lib"/>
	<property name="src.dir" value="src"/>
	<property name="build.dir" value="build/classes"/>
	<property name="output.file" value="PiEstimator.jar"/>
	
	<path id="master-classpath">
	  <fileset dir="${libraries}">
	    <include name="*.jar"/>
	  </fileset>
	  <pathelement path="${build.dir}"/>
	</path>

	<target name="clean">
        <delete dir="build"/>
		<delete file="${output.file}"/>
    </target>
    
	<target name="compile">
        <mkdir dir="${build.dir}"/>
        <javac srcdir="${src.dir}" destdir="${build.dir}" classpathref="master-classpath" includeantruntime="false" />
    </target>
    
	<target name="jar-gpu" depends="compile">
        <jar destfile="${output.file}" basedir="${build.dir}">
            <manifest>
                <attribute name="Main-Class" value="at.illecker.hama.rootbeer.examples.piestimator.PiEstimatorGpuBSP"/>
            </manifest>
        </jar>
    </target>
	
	<target name="jar-cpu" depends="compile">
        <jar destfile="${output.file}" basedir="${build.dir}">
	        <manifest>
	            <attribute name="Main-Class" value="at.illecker.hama.rootbeer.examples.piestimator.PiEstimatorCpuBSP"/>
	        </manifest>
        </jar>
	</target>
		
</project>
